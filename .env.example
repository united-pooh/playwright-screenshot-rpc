# Playwright Screenshot Server - Configuration Example
# Copy this file to .env and adjust the values as needed.

# ── 服务器设置 ──────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8080
MAX_CONCURRENT_SCREENSHOTS=3

# ── Playwright 设置 ──────────────────────────────────────────────────────────
BROWSER_TYPE=chromium  # Options: chromium, firefox, webkit
HEADLESS=true
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# ── 截图默认值 ──────────────────────────────────────────────────────────────
DEFAULT_IMAGE_TYPE=png  # Options: png, jpeg
DEFAULT_IMAGE_QUALITY=90
DEFAULT_WAIT_UNTIL=networkidle  # Options: load, domcontentloaded, networkidle
DEFAULT_TIMEOUT_MS=30000
DEFAULT_WAIT_FOR_SELECTOR_TIMEOUT=10000

# ── Redis ─────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TASK_QUEUE=screenshot_tasks
REDIS_RESULT_PREFIX=screenshot_result:
REDIS_RESULT_TTL_SECONDS=3600

# ── 其他 ─────────────────────────────────────────────────────────────────
JSON_RPC_VERSION=2.0
LOG_LEVEL=INFO
